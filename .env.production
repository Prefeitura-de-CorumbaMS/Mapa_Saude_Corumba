# Database Configuration (SIGLS - Destino - MySQL)
# Use credenciais separadas para evitar problemas com caracteres especiais na senha
DB_HOST="localhost"
DB_PORT="3306"
DB_NAME="sigls_db"
DB_USER="sigls_user"
DB_PASSWORD="sigls_secure_password_2025"

# Source Database Configuration (Base da Saúde - Fonte - PostgreSQL)
SOURCE_DB_HOST="localhost"
SOURCE_DB_PORT="5432"
SOURCE_DB_NAME="base_saude"
SOURCE_DB_USER="usuario"
SOURCE_DB_PASSWORD="senha"

# JWT Configuration
JWT_SECRET="sigls-corumba-jwt-secret-key-2025-change-in-production"
JWT_EXPIRES_IN="24h"

# API Configuration - PORTA 3002 (evitar conflito com outras aplicações)
API_PORT=3002
NODE_ENV="production"

# ETL Worker Configuration
ETL_SCHEDULE_CRON="0 2 * * *"  # Runs daily at 2 AM
ETL_BATCH_SIZE=1000
ETL_RUN_ON_START=false

# Frontend Configuration - PRODUÇÃO
VITE_API_URL="https://mapasaude.projetoestrategico.app/api"

# Logging
LOG_LEVEL="info"
LOG_FILE_PATH="./logs/app.log"
