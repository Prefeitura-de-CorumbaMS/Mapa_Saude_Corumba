# Database Configuration (SIGLS - Destino - MySQL)
# Use credenciais separadas para evitar problemas com caracteres especiais na senha
DB_HOST="localhost"
DB_PORT="3306"
DB_NAME="sigls_db"
DB_USER="root"
DB_PASSWORD="senha"

# Source Database Configuration (Base da Sa√∫de - Fonte - PostgreSQL)
SOURCE_DB_HOST="localhost"
SOURCE_DB_PORT="5432"
SOURCE_DB_NAME="base_saude"
SOURCE_DB_USER="usuario"
SOURCE_DB_PASSWORD="senha"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="24h"

# API Configuration
API_PORT=3001
NODE_ENV="development"

# ETL Worker Configuration
ETL_SCHEDULE_CRON="0 2 * * *"  # Runs daily at 2 AM
ETL_BATCH_SIZE=1000

# Frontend Configuration
VITE_API_URL="http://localhost:3001"

# Logging
LOG_LEVEL="info"
LOG_FILE_PATH="./logs/app.log"
